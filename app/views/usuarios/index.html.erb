<h2><%= t 'titulo.usuarios' %></h2>

<table>
  <tr>
    <th><%= t 'apellido' %></th>
    <th><%= t 'nombre' %></th>
    <th><%= t 'login' %></th>
    <th><%= t 'e-mail' %></th>
    <th colspan="3"></th>
  </tr>

<% @usuarios.each do |usuario| %>
  <tr>
    <td><%= usuario.apellido %></td>
    <td><%= usuario.nombre %></td>
    <td><%= usuario.login %></td>
    <td><%= usuario.email %></td>
    <td><%= link_to 'Ver', usuario %></td>
    <td><%= link_to 'Editar', edit_usuario_path(usuario) %></td>
    <td><%= link_to 'Destruir', usuario, confirm: '¿Estás seguro?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('nuevo_usuario'), new_usuario_path, :class => 'agregar' %>


	<h1><%= t 'titulo.artistas' %></h1>

	<div id="colour" class="text-right">
		<%= link_agregar new_artista_path, t('nuevo_artista') %>
	</div>

	<table>
		<thead>
		    <th><%= t 'nombre' %></th>
		    <th><%= t 'url' %></th>
		    <th colspan="3"></th>
		</thead>
		<tbody>
			<% @artistas.each do |artista| %>
			  <tr>
			    <td><%= artista.nombre %></td>
			    <td><%= artista.url %></td>
			    <td><%= link_to t('ver'), artista %></td>
			    <td><%= link_to t('editar'), edit_artista_path(artista) %></td>
			    <td><%= link_to t('borrar'), artista, confirm: t('confirmacion_borrado'), method: :delete %></td>
			  </tr>
			<% end %>
		</tbody>
	</table>